<% layout("/layouts/boilerplate.ejs") -%>
    <div class="row mt-3">
     <div class="col-8 offset-2">
        <h3>Create new Listing</h3>
     <form action="/listings" method="post" enctype="multipart/form-data" class="needs-validation" novalidate> 
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>   
            <input class="form-control" id="title" name="listing[title]" placeholder="enter title" type="text" required>
            <!-- <div class="valid-feedback">Looks good!</div> -->
            <div class="invalid-feedback">Title should be valid.</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label"> Description</label>
            <textarea class="form-control" id="description" name="listing[description]" placeholder="enter description" required></textarea>
            <!-- <div class="valid-feedback">Looks good!</div> -->
            <div class="invalid-feedback"> Description should be valid.</div>
        </div>
        
        <div class="mb-3">
            <label for="file" class="form-label">Upload Image</label>
            <input class="form-control" id="file" name="listing[image]" type="file" required> 
            <!-- <div class="valid-feedback">Looks good!</div> -->
            <div class="invalid-feedback"> URL should be valid.</div>
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price </label>
            <input class="form-control" id= "price" type="number" name="listing[price]" required> 
            <!-- <div class="valid-feedback">Looks good!</div> -->
            <div class="invalid-feedback">Price should be valid</div>
        </div>

        <div class="row">
            
            <div class="mb-3 col-md-4" >
                <label for="country" class="form-label"> Country </label>
                <input class="form-control" id="country" name="listing[country]" placeholder="enter country" type="text" required>     
                <!-- <div class="valid-feedback">Looks good!</div> -->
                <div class="invalid-feedback">Country should be valid.</div>
            </div>

            <div class="mb-3 col-md-8" >
                <label for="location" class="form-label">Location</label>
                <input class="form-control"
                 id="location"
                 name="listing[location]"
                placeholder="enter location" 
                type="text" required> 
                <!-- <div class="valid-feedback">Looks good!</div> -->
                <div class="invalid-feedback">Location should be valid.</div>
            </div>
        </div>
        
        <button class="btn btn-dark mb-3 add-btn">Add</button>                
     </form>
    </div>
</div>


