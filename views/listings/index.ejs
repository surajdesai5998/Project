    <!-- <h3>All listings</h3> -->

    <!-- <form action="/listings/new" method="get">
  <button>Create new Listings</button>
</form> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

      <% for(let listing of allListing) {%>
        <a class="listing-link" href="/listings/<%=listing.id %>">
          <div class="card col listing-card">
            <img class="card-img-top" src="<%= listing.image.url%>" alt="lising_image" style="height: 20rem">
            <div class="card-img-overlay">
              <%= listing.location %>
            </div>
            <div class="card-body">
              <p class="card-text"> <b>
                <%= listing.title %> </b> <br>
                <span class="price"> &#8377;<%= listing.price.toLocaleString("en-IN") %> /night</span>
                 <span class="tax-Info"> &#8377;<%= listing.price*(1.18).toLocaleString("en-IN") %> /night</span>
              </p>
                </div>
          </div>
        </a>
        <% } %>
    </div>



    <script src="/js/taxSwitch.js"></script>